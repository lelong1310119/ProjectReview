@model ProjectReview.DTO.Documents.CreateDocumentDTO
@{
    ViewData["Title"] = "DocumentSent-Create";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-table"></i> Thêm mới văn bản đi</h4>
                </div>
                <div class="card-body container-card">
                    <div class="card-content">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <div class="d-flex">
                                        <div class="form-group m-3">
                                            <label asp-for="Number" class="control-label">Số đi</label>
                                            <input asp-for="Number" class="form-control" type="number" min=1 />
                                            <span asp-validation-for="Number" class="text-danger"></span>
                                        </div>
                                        <div class="form-group m-3">
                                            <label asp-for="Symbol" class="control-label">Số ký hiệu</label>
                                            <input asp-for="Symbol" class="form-control" />
                                            <span asp-validation-for="Symbol" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Author" class="control-label">Tác giả</label>
                                        <input asp-for="Author" class="form-control" />
                                        <span asp-validation-for="Author" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Signer" class="control-label">Người ký</label>
                                        <input asp-for="Signer" class="form-control" />
                                        <span asp-validation-for="Signer" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Position" class="control-label">Chức vụ</label>
                                        <input asp-for="Position" class="form-control" />
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Content" class="control-label">Nội dung</label>
                                        <textarea asp-for="Content" class="form-control "></textarea>
                                        <span asp-validation-for="Content" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="DateIssued" class="control-label">Ngày phát hành</label>
                                        <input asp-for="DateIssued" class="form-control" type="date" />
                                        <span asp-validation-for="DateIssued" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="ProfileIds" class="control-label">Hồ sơ công việc</label>
                                        <select asp-for="ProfileIds" class="form-control chosen-select" multiple tabindex="6" placeholder="Người thực hiện" asp-items="ViewBag.JobProfileId"></select>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <div class="d-flex">
                                        <div class="form-group m-3">
                                            <label asp-for="NumberPaper" class="control-label">Số tờ</label>
                                            <input asp-for="NumberPaper" class="form-control" type="number" min=1 />
                                            <span asp-validation-for="NumberPaper" class="text-danger"></span>
                                        </div>
                                        <div class="form-group m-3">
                                            <label asp-for="Language" class="control-label">Ngôn ngữ</label>
                                            <input asp-for="Language" class="form-control" />
                                            <span asp-validation-for="Language" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="DensityId" class="control-label">Độ mật</label>
                                        <select asp-for="DensityId" class="form-control" asp-items="ViewBag.DensityId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="UrgencyId" class="control-label">Độ khẩn</label>
                                        <select asp-for="UrgencyId" class="form-control" asp-items="ViewBag.UrgencyId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="DocumentTypeId" class="control-label">Loại văn bản</label>
                                        <select asp-for="DocumentTypeId" class="form-control" asp-items="ViewBag.DocumentTypeId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Note" class="control-label">Ghi chú</label>
                                        <textarea asp-for="Note" class="form-control "></textarea>
                                        <span asp-validation-for="Note" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="FormFile" class="control-label">Tệp đính kèm</label>
                                        <input asp-for="FormFile" class="form-control" type="file" accept=".doc,.docx,.xls,.xlsx,.csv,.pdf" />
                                        <span asp-validation-for="FormFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                            <label asp-for="Number" class="control-label">Tên chức vụ</label>
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                            <label asp-for="DocumentName" class="control-label">Ghi chú</label>
                            <input asp-for="DocumentName" class="form-control" />
                            <span asp-validation-for="DocumentName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label">Ghi chú</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            </div>*@
                            <div class="form-group m-3 d-flex justify-content-center align-items-center">
                                <a type="button" class="btn btn-lg btn-secondary d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="DocumentSent" asp-action="Index" asp-route-page="@ViewContext.HttpContext.Session.GetInt32("page")" style="width: 100px">
                                    <i class="fa-solid fa-arrow-left"></i> Trở về
                                </a>
                                <button type="submit" class="btn btn-lg btn-primary mx-3 d-flex flex-column align-items-center justify-content-center" style="width: 100px">
                                    <i class="fa-solid fa-save"></i>Thêm
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}