@model ProjectReview.DTO.Users.CreateUserDTO
@{
    ViewData["Title"] = "User-Create";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="far fa-folder-open"></i> Thêm mới cán bộ</h4>
                </div>
                <div class="card-body container-card">
                    <div class="card-content">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <div class="form-group m-3">
                                        <label asp-for="FullName" class="control-label">Họ và tên</label>
                                        <input asp-for="FullName" class="form-control" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="UserName" class="control-label">Tên đăng nhập</label>
                                        <input asp-for="UserName" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Email" class="control-label">Email</label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label class="control-label">Giới tính</label>
                                        <div class="form-check d-flex">
                                            <input class="form-check" type="radio" asp-for="Gender" value="Nam" checked>
                                            <label class="form-check-label me-4">
                                                Nam
                                            </label>
                                            <input class="form-check" type="radio" asp-for="Gender" value="Nữ">
                                            <label class="form-check-label">
                                                Nữ
                                            </label>
                                        </div>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Note" class="control-label">Ghi chú</label>
                                        <input asp-for="Note" class="form-control" />
                                        <span asp-validation-for="Note" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Birthday" class="control-label">Ngày sinh</label>
                                        <input asp-for="Birthday" class="form-control" type="date"/>
                                        <span asp-validation-for="Birthday" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <div class="form-group m-3">
                                        <label asp-for="PositionId" class="control-label">Chức vụ</label>
                                        <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="DepartmentId" class="control-label">Đơn vị</label>
                                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="RankId" class="control-label">Cấp bậc</label>
                                        <select asp-for="RankId" class="form-control" asp-items="ViewBag.RankId"></select>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="PermissionGroupId" class="control-label">Nhóm quyền</label>
                                        <select asp-for="PermissionGroupId" class="form-control" asp-items="ViewBag.PermissionGroupId"></select>
                                    </div>
                                </div>
                            </div>
                            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="control-label">Tên chức vụ</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="UserName" class="control-label">Ghi chú</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label">Ghi chú</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>*@
                            <div class="form-group m-3 d-flex justify-content-center align-items-center">
                                <a type="button" class="btn btn-lg btn-secondary d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="Users" asp-action="Index" asp-route-page="@ViewContext.HttpContext.Session.GetInt32("page")" style="width: 100px">
                                    <i class="fa-solid fa-arrow-left"></i> Trở về
                                </a>
                                <button type="submit" class="btn btn-lg btn-primary mx-3 d-flex flex-column align-items-center justify-content-center" style="width: 100px">
                                    <i class="fa-solid fa-save"></i>Thêm
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}