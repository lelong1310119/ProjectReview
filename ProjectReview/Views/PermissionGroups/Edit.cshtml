@model ProjectReview.DTO.PermissionGroups.UpdatePermissionGroupDTO
@using ProjectReview.Enums;
@{
    ViewData["Title"] = "PermissionGroup-Edit";
    var listRole = RoleEnum.RoleEnumList;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="far fa-folder-open"></i> Chỉnh sửa nhóm quyền</h4>
                </div>
                <div class="card-body container-card">
                    <div class="card-content">
                        <form asp-action="Edit" class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden">
                            <div class="form-group m-3">
                                <label asp-for="Name" class="control-label">Tên nhóm quyền</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="ListRole" class="control-label">Quyền</label>
                                <select asp-for="ListRole" class="form-control chosen-select" multiple tabindex="6" placeholder="Người thực hiện" asp-items="ViewBag.RoleId"></select>
                            </div>
                            <div class="form-group m-3 d-flex justify-content-center align-items-center">
                                <a type="button" class="btn btn-lg btn-secondary d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="PermissionGroups" asp-action="Index" asp-route-page="@ViewContext.HttpContext.Session.GetInt32("page")" style="width: 100px">
                                    <i class="fa-solid fa-arrow-left"></i> Trở về
                                </a>
                                <button type="submit" class="btn btn-lg btn-primary mx-3 d-flex flex-column align-items-center justify-content-center" style="width: 100px">
                                    <i class="fa-solid fa-save"></i>Lưu
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

